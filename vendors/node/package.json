{
  "name": "@planria-sdk/node",
  "description": "The SDK developed to connect your app to Planria on the server side.",
  "version": "1.0.0",
  "sideEffects": false,
  "license": "Apache-2.0",
  "bin": {
    "planria": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup ./src",
    "postbuild": "rimraf -rf ./dist/*.{test,spec}.*",
    "dev": "tsup ./src --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "devDependencies": {
    "@drizzle-team/brocli": "^0.10.1",
    "@planria/eslint-config": "workspace:*",
    "@planria/tsconfig": "workspace:*",
    "@types/node": "^22.6.0",
    "@types/yargs": "^17.0.33",
    "eslint": "^8.57.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.0",
    "typescript": "^5.3.3",
    "vitest": "^2.1.1"
  },
  "peerDependencies": {
    "@planria/util": "workspace:*"
  },
  "dependencies": {
    "yargs": "^17.7.2"
  }
}